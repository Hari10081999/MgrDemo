<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/purple_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sp"
            android:layout_marginStart="@dimen/_20sp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginTop="5dp"
                android:elevation="24dp"
                android:src="@drawable/back_svg" />
            <TextView
                style="@style/FontBold"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sp"
                android:layout_height="wrap_content"
                android:text="Karthick |"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                style="@style/FontBold"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sp"
                android:layout_height="wrap_content"
                android:text="karthick@gmail.com"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="110dp"
            style="@style/BottomSheet">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/page1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_20sp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginHorizontal="@dimen/_20sp"
                        android:background="@color/black"
                        android:layout_gravity="center"
                        android:layout_height="210dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/student_banner"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="115dp"
                            android:layout_marginHorizontal="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_gravity="center"
                                android:src="@drawable/profile_banner"/>

                            <LinearLayout
                                android:layout_width="230dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:gravity="start|center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/inter_bold"
                                    android:textColor="@color/black"
                                    android:text="Karthick"
                                    android:id="@+id/uname"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/inter_semibold"
                                    android:textColor="@color/grey"
                                    android:text="karthick@gmail.com"
                                    android:id="@+id/umail"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/inter_semibold"
                                        android:textColor="@color/grey"
                                        android:text="MBA"
                                        android:id="@+id/degree"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/inter_semibold"
                                        android:layout_marginStart="@dimen/_10sp"
                                        android:textColor="@color/grey"
                                        android:text="Biology"
                                        android:id="@+id/subject"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp"
                        android:layout_marginHorizontal="@dimen/_20sp"
                        android:orientation="vertical"
                        android:background="@drawable/border_line_curve_6dp_grey"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/about"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:fontFamily="@font/inter_semibold"
                                android:padding="5dp"
                                android:text="About"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                app:drawableEndCompat="@drawable/ic_arrow_forward" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:src="@drawable/grey_line" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:fontFamily="@font/inter_semibold"
                                android:visibility="gone"
                                android:text="Full Name: Karthick"
                                android:textColor="@color/grey"
                                android:textSize="15sp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:visibility="gone"
                                android:fontFamily="@font/inter_semibold"
                                android:text="Date of Birth: 19 / 07 / 2000"
                                android:textColor="@color/grey"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:visibility="gone"
                                android:fontFamily="@font/inter_semibold"
                                android:text="Gender: Male"
                                android:textColor="@color/grey"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:visibility="gone"
                                android:fontFamily="@font/inter_semibold"
                                android:text="Blood Group: AB+"
                                android:textColor="@color/grey"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/contact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:fontFamily="@font/inter_semibold"
                                android:padding="5dp"
                                android:text="Contact"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                app:drawableEndCompat="@drawable/ic_arrow_forward" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:src="@drawable/grey_line" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/contactUs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:fontFamily="@font/inter_semibold"
                                android:padding="5dp"
                                android:text="Address"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                app:drawableEndCompat="@drawable/ic_arrow_forward" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:src="@drawable/grey_line" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/interestedTopics"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:fontFamily="@font/inter_semibold"
                                android:padding="5dp"
                                android:text="My Interested Topics"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                app:drawableEndCompat="@drawable/ic_arrow_forward" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="5dp"
                                android:src="@drawable/grey_line" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginTop="40dp"
                        android:layout_marginHorizontal="@dimen/_20sp"
                        android:orientation="horizontal">
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Approve"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            app:backgroundTint="@color/colorPrimaryDark"
                            android:textAllCaps="false"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:text="Reject"
                            app:backgroundTint="@color/red"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
