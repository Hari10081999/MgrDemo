
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/purple_bg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="@dimen/_20sp"
            android:elevation="24dp"
            android:src="@drawable/back_svg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginStart="@dimen/_20sp"
            android:textColor="@color/white"
            style="@style/FontBold"
            android:text="Dashboard"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/img"
            android:visibility="invisible"
            android:layout_alignParentEnd="true"
            android:src="@drawable/mgr_logo_library"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anim_view_main"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_fileName="splash_new.json"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="173dp"
            style="@style/BottomSheet">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="106dp"
                    android:layout_height="107dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/light_background"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/dashboard_man"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black"
                        android:text="Students" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="245909"
                        android:textColor="@color/black"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="106dp"
                    android:layout_height="107dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/light_background"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/dashboard_man"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black"
                        android:text="Professors" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="3909"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="106dp"
                    android:layout_height="107dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/light_background"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/dashboard_man"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="center"
                        android:text="Contents"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="25049"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Updates"
                android:textSize="18sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"/>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/_20sp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@drawable/radio_text_color_change"
                    android:background="@drawable/custom_radio_selector"
                    android:button="@color/transparent"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Student"
                    android:textSize="16sp"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:button="@color/transparent"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@drawable/radio_text_color_change"
                    android:background="@drawable/custom_radio_selector"
                    android:gravity="center"
                    android:text="Professors"
                    android:textSize="16sp" />

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@drawable/radio_text_color_change"
                    android:background="@drawable/custom_radio_selector"
                    android:button="@color/transparent"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Contents"
                    android:textSize="16sp" />
            </RadioGroup>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favoriteRecycleView"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sp"
                android:layout_marginHorizontal="@dimen/_20sp"
                android:layout_height="match_parent"
                tools:listitem="@layout/student_card"
                android:orientation="vertical"/>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
