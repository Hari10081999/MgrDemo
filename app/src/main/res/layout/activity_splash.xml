<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/main_constraint"
    tools:context=".SplashActivity">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim_view_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_fileName="splash_new.json"
        android:visibility="visible"
        app:lottie_loop="true" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/transparent"
        android:visibility="gone"
        android:id="@+id/top">
        <View
            android:id="@+id/anim_view_top"
            android:layout_width="286dp"
            android:layout_height="286dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/anim_view_side"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:id="@+id/back"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FontBold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/back"
            android:layout_marginStart="24dp"
            android:id="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/_22sp"
            android:text="Login"
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="26dp"
        android:id="@+id/bot_card"
        android:visibility="gone"
        android:layout_marginBottom="-26dp"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/page1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="26dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    style="@style/FontBold"
                    android:layout_marginTop="24dp"
                    android:textSize="@dimen/_22sp"
                    android:text="“Education is one thing no one can take away from you.”"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    style="@style/FontMedium"
                    android:layout_marginTop="24dp"
                    android:textSize="@dimen/_14sp"
                    android:text="Dr.M.G.R Online Programs Admission Open for \nJuly - 2023 Batch"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardCornerRadius="6dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Phone Number"
                        style="@style/FontMedium"
                        android:textSize="@dimen/_16sp"
                        android:id="@+id/edt_phone"
                        android:textColor="@color/black"
                        android:textColorHint="#747474"
                        android:paddingVertical="14dp"
                        android:paddingHorizontal="16dp"
                        android:inputType="number"/>
                </androidx.cardview.widget.CardView>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/FontBold"
                    android:layout_marginTop="30dp"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_16sp"
                    app:cornerRadius="30dp"
                    android:id="@+id/getStarted1"
                    android:backgroundTint="@color/black"
                    android:text="Get Started"
                    android:paddingVertical="15dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account"
                    style="@style/FontMedium"
                    android:visibility="gone"
                    android:id="@+id/already"
                    android:drawablePadding="10dp"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:layout_marginVertical="30dp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_16sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/page2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="26dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#747474"
                    style="@style/FontMedium"
                    android:id="@+id/sub_title"
                    android:layout_marginTop="19dp"
                    android:textSize="@dimen/_14sp"
                    android:text="1 of 3"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="14dp"
                    android:weightSum="3">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="3dp"
                        android:layout_weight="1">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:id="@+id/view1"
                            android:background="#E2E2E2"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        app:cardCornerRadius="3dp"
                        android:layout_weight="1">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:id="@+id/view2"
                            android:background="#E2E2E2"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="3dp"
                        android:layout_weight="1">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:id="@+id/view3"
                            android:background="#E2E2E2"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:id="@+id/sub_page1"
                    android:visibility="visible"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            style="@style/FontBold"
                            android:layout_marginTop="4dp"
                            android:textSize="@dimen/_22sp"
                            android:text="Validate OTP "/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            style="@style/FontRegular"
                            android:layout_marginTop="4dp"
                            android:textSize="@dimen/_16sp"
                            android:text="(One Time Passcode)"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#747474"
                        style="@style/FontMedium"
                        android:layout_marginTop="12dp"
                        android:id="@+id/otp_top_txt"
                        android:textSize="@dimen/_14sp"
                        android:text="To verify your phone number, please enter the OTP sent to +91 9944747524."/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="6"
                        android:layout_gravity="center"
                        android:layout_marginTop="32dp">
                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="4dp"
                            android:background="@drawable/border_line_curve_6dp_green"
                            style="@style/FontBold"
                            android:id="@+id/otp1"
                            android:gravity="center"
                            android:textSize="@dimen/_22sp"
                            android:textColor="@color/black"
                            android:inputType="number"/>
                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="4dp"
                            android:gravity="center"
                            android:id="@+id/otp2"
                            android:background="@drawable/border_line_curve_6dp_green"
                            style="@style/FontBold"
                            android:textSize="@dimen/_22sp"
                            android:textColor="@color/black"
                            android:maxLength="1"
                            android:inputType="number"/>
                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="4dp"
                            android:gravity="center"
                            android:id="@+id/otp3"
                            android:background="@drawable/border_line_curve_6dp_green"
                            style="@style/FontBold"
                            android:textSize="@dimen/_22sp"
                            android:textColor="@color/black"
                            android:maxLength="1"
                            android:inputType="number"/>
                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="4dp"
                            android:gravity="center"
                            android:id="@+id/otp4"
                            android:background="@drawable/border_line_curve_6dp_green"
                            style="@style/FontBold"
                            android:textSize="@dimen/_22sp"
                            android:textColor="@color/black"
                            android:maxLength="1"
                            android:inputType="number"/>
                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="4dp"
                            android:gravity="center"
                            android:id="@+id/otp5"
                            android:background="@drawable/border_line_curve_6dp_green"
                            style="@style/FontBold"
                            android:textSize="@dimen/_22sp"
                            android:textColor="@color/black"
                            android:maxLength="1"
                            android:inputType="number"/>
                        <EditText
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="4dp"
                            android:gravity="center"
                            android:id="@+id/otp6"
                            android:background="@drawable/border_line_curve_6dp_green"
                            style="@style/FontBold"
                            android:textSize="@dimen/_22sp"
                            android:textColor="@color/black"
                            android:maxLength="1"
                            android:inputType="number"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#DE0E3E"
                        android:layout_gravity="end"
                        android:id="@+id/resend_otp"
                        style="@style/FontMedium"
                        android:drawableEnd="@drawable/ic_arrow_forward"
                        android:drawablePadding="10dp"
                        android:drawableTint="#DE0E3E"
                        android:layout_marginTop="16dp"
                        android:textSize="@dimen/_16sp"
                        android:text="Resend OTP"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/validate_otp"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/FontSemiBold"
                        android:layout_marginTop="16dp"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_16sp"
                        app:cornerRadius="4dp"
                        android:id="@+id/next"
                        android:backgroundTint="@color/black"
                        android:text="Next"
                        android:paddingVertical="15dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Phone number"
                        style="@style/FontMedium"
                        android:id="@+id/change_phone"
                        android:drawablePadding="10dp"
                        android:drawableEnd="@drawable/ic_arrow_forward"
                        android:layout_marginVertical="14dp"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_16sp"
                        android:textColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:visibility="gone"
                    android:id="@+id/sub_page2"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            style="@style/FontBold"
                            android:layout_marginTop="4dp"
                            android:textSize="@dimen/_22sp"
                            android:text="Create Account"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardCornerRadius="6dp">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="Name"
                                style="@style/FontMedium"
                                android:textSize="@dimen/_16sp"
                                android:id="@+id/edt_name"
                                android:textColor="@color/black"
                                android:textColorHint="#747474"
                                android:paddingVertical="14dp"
                                android:paddingHorizontal="16dp"
                                android:inputType="text"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardCornerRadius="6dp">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="EMail"
                                style="@style/FontMedium"
                                android:textSize="@dimen/_16sp"
                                android:id="@+id/edt_mail"
                                android:textColor="@color/black"
                                android:textColorHint="#747474"
                                android:paddingVertical="14dp"
                                android:paddingHorizontal="16dp"
                                android:inputType="textEmailAddress"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardCornerRadius="6dp">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="University"
                                style="@style/FontMedium"
                                android:textSize="@dimen/_16sp"
                                android:id="@+id/edt_univer"
                                android:textColor="@color/black"
                                android:textColorHint="#747474"
                                android:paddingVertical="14dp"
                                android:paddingHorizontal="16dp"
                                android:inputType="text"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#F5F5F5"
                            app:cardCornerRadius="6dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#747474"
                                        android:textSize="@dimen/_16sp"
                                        android:text="Student"/>
                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#747474"
                                        android:textSize="@dimen/_16sp"
                                        android:text="Professor"/>
                                </RadioGroup>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/FontSemiBold"
                        android:layout_marginTop="30dp"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_16sp"
                        app:cornerRadius="4dp"
                        android:id="@+id/next1"
                        android:backgroundTint="@color/black"
                        android:text="Next"
                        android:paddingVertical="15dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:visibility="gone"
                    android:id="@+id/sub_page3"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            style="@style/FontBold"
                            android:layout_marginTop="4dp"
                            android:textSize="@dimen/_22sp"
                            android:text="Intrested Topics"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accounts &amp; Finance Marketing"
                            android:textColor="#747474"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Human Resource &amp; Marketing"
                            android:textColor="#747474"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Biology Science"
                            android:textColor="#747474"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marketing Management"
                            android:textColor="#747474"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visual Communications"
                            android:textColor="#747474"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modern Physics"
                            android:textColor="#747474"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chemistry Theory"
                            android:textColor="#747474"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bio Medical Science"
                            android:textColor="#747474"/>
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Information Technology"
                            android:textColor="#747474"/>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/FontSemiBold"
                        android:layout_marginTop="30dp"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_16sp"
                        app:cornerRadius="4dp"
                        android:id="@+id/next2"
                        android:backgroundTint="@color/black"
                        android:text="Next"
                        android:paddingVertical="15dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/page3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="26dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    style="@style/FontBold"
                    android:layout_marginTop="36dp"
                    android:textSize="@dimen/_22sp"
                    android:text="Welcome Back "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#747474"
                    style="@style/FontMedium"
                    android:layout_marginTop="4dp"
                    android:textSize="@dimen/_14sp"
                    android:text="Welcome to Dr. MGR Online Course"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    style="@style/FontMedium"
                    android:layout_marginTop="35dp"
                    android:textSize="@dimen/_14sp"
                    android:text="Email"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F5F5F5"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/border_line_curve_6dp_grey"
                    android:hint="Email Address"
                    style="@style/FontMedium"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/black"
                    android:textColorHint="#747474"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="16dp"
                    android:inputType="textEmailAddress"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    style="@style/FontMedium"
                    android:layout_marginTop="15dp"
                    android:textSize="@dimen/_14sp"
                    android:text="Password"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F5F5F5"
                        android:background="@drawable/border_line_curve_6dp_grey"
                        android:hint="Password"
                        android:id="@+id/edt_password"
                        style="@style/FontMedium"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        android:textSize="@dimen/_14sp"
                        android:textColor="@color/black"
                        android:textColorHint="#747474"
                        android:paddingVertical="16dp"
                        android:paddingHorizontal="16dp"
                        android:inputType="textPassword"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/edt_password"
                        android:paddingStart="8dp"
                        android:paddingEnd="13dp"
                        android:paddingTop="13dp"
                        android:paddingBottom="8dp"
                        app:layout_constraintTop_toTopOf="@id/edt_password"
                        app:layout_constraintBottom_toBottomOf="@id/edt_password"
