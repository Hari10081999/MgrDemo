<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Demo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
<!--
        <item name="android:windowBackground">@drawable/splash</item>
-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
<!--
        <item name="android:background">@drawable/bottom_sheet_bg</item>
-->
    </style>

    <style name="FontRegular">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="FontBold">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>
    <style name="FontSemiBold">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>
    <style name="FontMedium">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>
    <style name="FontSpeakProHeavy">
        <item name="android:fontFamily">@font/speakpro_heavy</item>
        <item name="fontFamily">@font/speakpro_heavy</item>
    </style>
    <style name="FontSpeakPro">
        <item name="android:fontFamily">@font/speakpro</item>
        <item name="fontFamily">@font/speakpro</item>
    </style>
</resources>